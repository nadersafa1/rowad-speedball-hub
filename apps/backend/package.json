{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.simple.ts",
    "build": "tsc src/index.simple.ts --outDir dist --target ES2022 --module commonjs --strict --esModuleInterop --skipLibCheck --forceConsistentCasingInFileNames --resolveJsonModule",
    "start": "node dist/index.simple.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@ts-rest/core": "^3.30.0",
    "@ts-rest/express": "^3.30.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "drizzle-orm": "^0.29.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.17.0",
    "helmet": "^7.1.0",
    "postgres": "^3.4.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.17.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "drizzle-kit": "^0.20.0",
    "@faker-js/faker": "^8.3.1",
    "eslint": "^8.54.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
